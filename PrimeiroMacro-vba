import random

def criar_grupos(n_grupos):
    grupos = [[] for _ in range(n_grupos)]

    while True:
        nome = input("Digite um nome (ou 'fim' para encerrar): ")
        if nome.lower() == 'fim':
            break
        grupos[random.randint(0, n_grupos-1)].append(nome)

    return grupos

def main():
    n_grupos = int(input("Digite o número de grupos (2, 4 ou 8): "))

    if n_grupos not in [2, 4, 8]:
        print("Número de grupos inválido!")
        return

    grupos = criar_grupos(n_grupos)

    for i, grupo in enumerate(grupos):
        print(f"Grupo {i+1}: {grupo}")

if __name__ == "__main__":
    main()










