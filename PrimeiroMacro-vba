import random

def sortear_grupos(participantes, num_grupos):
    random.shuffle(participantes)
    grupos = []
    tamanho_grupo = len(participantes) // num_grupos
    
    for i in range(num_grupos):
        inicio = i * tamanho_grupo
        fim = (i + 1) * tamanho_grupo
        grupos.append(participantes[inicio:fim])
    
    return grupos

participantes = ["João", "Maria", "Pedro", "Ana", "Carlos", "Lúcia", "Mariana", "José"]
num_grupos = 4

grupos_sorteados = sortear_grupos(participantes, num_grupos)

for i, grupo in enumerate(grupos_sorteados, start=1):
    print(f"Grupo {i}: {grupo}")









